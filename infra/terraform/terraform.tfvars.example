# OCI Authentication
tenancy_ocid  = "ocid1.tenancy.oc1..example"
user_ocid     = "ocid1.user.oc1..example"
fingerprint   = "aa:bb:cc:dd:ee:ff:00:11:22:33:44:55:66:77:88:99"
# private_key = "..." # Pass via TF_VAR_private_key or -var flag (do NOT commit)

# OCI Region & Namespace
oci_region    = "eu-frankfurt-1"
oci_namespace = "your-tenancy-namespace"

# Compartment
compartment_ocid = "ocid1.compartment.oc1..example"

# Node Image (Oracle Linux 8 aarch64 for your region)
# Find via: oci compute image list --compartment-id <OCID> --shape VM.Standard.A1.Flex --sort-by TIMECREATED --limit 5
node_image_id = "ocid1.image.oc1.eu-frankfurt-1..example"

# Optional
# ssh_public_key     = "ssh-rsa AAAA..."
# kubernetes_version = "v1.30.1"
# node_ocpus         = 4
# node_memory_gb     = 24
